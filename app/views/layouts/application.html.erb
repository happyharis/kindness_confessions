<!DOCTYPE html>
<html>
  <head>
    <title>KindnessConfessions</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
			<%= link_to root_path do %>
				<%= image_tag("KC_logo_edited.png", alt: "KindnessConfessions", width: 250, length: 250) %>
			<% end %>

			<ul class="navbar-nav ml-auto">
		    <li class="nav-item active">
		      <%= link_to "Why share?", reason_path, class: "nav-link" %>
		    </li>
		    <li class="nav-item">
		      <%= link_to "About this website", about_this_path, class: "nav-link" %>
		    </li>
		  </ul>
		</nav>
    
    <%= yield %>

    <br />
    <footer class="footer">
    	<div class="container-fluid">
    		<p>Kindness Confessions &copy; 2017</p>
    	</div>
    </footer>
  
  </body>
</html>
