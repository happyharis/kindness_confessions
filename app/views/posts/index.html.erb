<div class="container ">

	<div class="row justify-content-md-center">
		<div class="col-10">
			<%= form_for @post, url: posts_path, method: :post do |f| %>	

				<div class="question">
					<br />
					<p>Have you chance upon an act of kindness where you still remember it till today? </p>
					<p>Why not share it here!</p>
				</div>

				<div class="form-group">
					<%= f.text_area :body, 
							class: "form-control", 
							rows: "8", 
							placeholder: "e.g. Thank you yellow shirt guy who helped me return my wallet! " %>
				</div>

				<div>
					<%= f.label :From %>
					<button type="button" class="btn btn-secondary btn-sm" data-container="body" data-toggle="popover" data-placement="top" data-content="Your name will be saved as anonymous if no name is inputed.">
  					?
					</button>
					<%= f.text_field :author , placeholder: "Anonymous" %>
					<%= f.submit 'Submit'	%>
				</div>
					
			<% end %>
		</div>
	</div>

</div>

<br />

<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-10">

		<% @posts.each do |post| %>
			<div class="card">
			  <div class="card-body">
					
					<%= post.id %>		
					<%= post.body %>
					<%= post.author %>

			  </div>
			</div>
			<br />
		<% end %>
		
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function () {
  	$('[data-toggle="popover"]').popover()
	})
</script>