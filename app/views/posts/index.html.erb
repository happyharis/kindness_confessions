<div class="container">

	<%= form_for @post, url: posts_path, method: :post do |f| %>	
		
		<div>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>

		<div>
			<%= f.label :body %>
			<%= f.text_area :body %>
		</div>

		<div>
			<%= f.label :author %>
			<%= f.text_field :author %>
		</div>
			
		<%= f.submit 'Submit'	%>

	<% end %>
</div>

<div class="container">

	<%= @posts.each do |post| %>

		<%= post.title %>
		<%= post.body %>
		<%= post.author %>

	<% end %>
	
</div>