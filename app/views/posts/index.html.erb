<div class="container ">

	<div class="row justify-content-md-center">
		<div class="col-10">
			<%= form_for @post, url: posts_path, method: :post do |f| %>	

				<div class="question">
					<br />
					<p>Have you chance upon an act of kindness where you still remember it till today? </p>
					<p>Why not share it here!</p>
				</div>

				<div class="form-group">
					<%= f.text_area :body, 
							class: "form-control", 
							rows: "8", 
							placeholder: "e.g. Thank you yellow shirt guy who helped me return my wallet! " %>
				</div>

				<div>
					<%= f.label :From %>
					<%= f.text_field :author , placeholder: "Anonymous" %>
					<%= f.submit 'Submit'	%>
				</div>
					
			<% end %>
		</div>
	</div>

</div>

<div class="container">

	<% @posts.each do |post| %>
		
		<%= post.id %>		
		<%= post.body %>
		<%= post.author %>

	<% end %>
	
</div>